<PivotItem
    x:Class="Karamem0.Kanpuchi.Views.TweetPivotItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:li="using:Karamem0.Kanpuchi.Interactivity"
    mc:Ignorable="d"
    Margin="6,0,0,0">
    <PivotItem.Header>
        <TextBlock
            x:Uid="TweetPivotHeader"
            Style="{ThemeResource BodyTextBlockStyle}"
            Text="Tweets" />
    </PivotItem.Header>
    <Border>
        <Border.Resources>
            <li:BooleanAndVisibilityConverter
                x:Key="VisibleConverter"
                IsReverse="False" />
            <li:BooleanAndVisibilityConverter
                x:Key="CollaspedConverter"
                IsReverse="True" />
            <li:LocalTimeConverter x:Key="LocalTimeConverter" />
        </Border.Resources>
        <ListBox
            Background="#00FFFFFF"
            ItemsSource="{Binding Tweets}"
            Style="{StaticResource ListBoxStyle}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,0,0,0">
                        <Grid x:Name="Grid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.RenderTransform>
                                <TranslateTransform X="0" Y="0" />
                            </Grid.RenderTransform>
                            <Border
                                Grid.Column="0"
                                Grid.Row="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top">
                                <Image
                                    Height="48"
                                    Source="{Binding ProfileImageUrl}"
                                    Width="48" />
                            </Border>
                            <StackPanel
                                Grid.Column="1"
                                Grid.Row="0"
                                Orientation="Vertical"
                                Margin="12,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Foreground="{StaticResource AppThemeDarkBrush}"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding UserName}" />
                                    <TextBlock
                                        Foreground="{ThemeResource SystemChromeDisabledLowColor}"
                                        Margin="3,0,0,0"
                                        Style="{ThemeResource BodyTextBlockStyle}"
                                        VerticalAlignment="Bottom">
                                        <Run Text="@" /><Run Text="{Binding ScreenName}" />
                                    </TextBlock>
                                </StackPanel>
                                <TextBlock
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Text="{Binding Text}"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Foreground="{ThemeResource SystemColorGrayTextColor}"
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    Text="{Binding CreatedAt, Converter={StaticResource LocalTimeConverter}}" />
                            </StackPanel>
                            <StackPanel
                                Grid.Column="1"
                                Grid.Row="1"
                                Orientation="Horizontal"
                                Margin="12,12,0,6">
                                <Button
                                    Command="{Binding LaunchBrowserCommand}"
                                    Content="&#xE774;"
                                    Margin="0,0,0,0"
                                    Style="{StaticResource ListIconButtonStyle}" />
                                <Button
                                    Command="{Binding DataTransferCommand}"
                                    Content="&#xE72D;"
                                    Margin="24,0,0,0"
                                    Style="{StaticResource ListIconButtonStyle}" />
                                <Button
                                    Command="{Binding CopyClipboardCommand}"
                                    Content="&#xE8C8;"
                                    Margin="24,0,0,0"
                                    Style="{StaticResource ListIconButtonStyle}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.Template>
                <ControlTemplate TargetType="ListBox">
                    <ScrollViewer x:Name="ScrollViewer">
                        <Grid
                            x:Name="Content"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Margin="{TemplateBinding Padding}">
                            <Grid
                                Margin="0,-48,0,48"
                                VerticalAlignment="Top">
                                <FontIcon
                                    Foreground="{ThemeResource SystemChromeDisabledLowColor}"
                                    FontFamily="Segoe MDL2 Assets"
                                    Glyph="&#xE72C;"
                                    Height="48"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Width="48" />
                            </Grid>
                            <ItemsPresenter />
                        </Grid>
                    </ScrollViewer>
                </ControlTemplate>
            </ListBox.Template>
            <i:Interaction.Behaviors>
                <li:ScrollBoundsBehavior
                    ScrollBottomCommand="{Binding LoadPreviousCommand}"
                    ScrollBottomOffset="30"
                    ScrollTopCommand="{Binding LoadLatestCommand}"
                    ScrollTopOffset="50" />
            </i:Interaction.Behaviors>
        </ListBox>
    </Border>
</PivotItem>
