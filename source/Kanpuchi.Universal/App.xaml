<Application
    x:Class="Karamem0.Kanpuchi.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:li="using:Karamem0.Kanpuchi.Interactivity">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Generic.xaml" />
                <ResourceDictionary>
                    <li:ViewModelLocator x:Key="ViewModelLocator" />
                    <li:LauncherCommands x:Key="LauncherCommands" />
                    <li:BooleanAndVisibilityConverter
                        x:Key="VisibleConverter"
                        IsReverse="False" />
                    <li:BooleanAndVisibilityConverter
                        x:Key="CollaspedConverter"
                        IsReverse="True" />
                    <li:LocalTimeConverter x:Key="LocalTimeConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
