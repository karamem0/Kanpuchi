<PivotItem
    x:Class="Karamem0.Kanpuchi.Views.GeneralPivotItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding SettingsViewModel, Source={StaticResource ViewModelLocator}}"
    Language="ja-JP">
    <PivotItem.Header>
        <TextBlock
            x:Uid="GeneralHeader"
            CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}"
            FontSize="{ThemeResource TextStyleExtraExtraLargeFontSize}"
            Foreground="{ThemeResource PhoneForegroundBrush}"
            Margin="0,3,0,0"
            Text="general" />
    </PivotItem.Header>
    <StackPanel>
        <CheckBox
            x:Uid="UseInAppBrowserCheckBox"
            Content="use in-app browser"
            FontSize="{ThemeResource TextStyleMediumFontSize}"
            Foreground="{ThemeResource PhoneForegroundBrush}"
            IsChecked="{Binding UseInAppBrowser,Mode=TwoWay}" />
    </StackPanel>
</PivotItem>
